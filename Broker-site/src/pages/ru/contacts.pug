extends ../../pug/base/base

append vars
	- lang = "ru"
	- currentPage = 'contacts'
	- baseDir = lang == "en" ? baseDir : "../"
	- title = titles.contacts[lang]

//- prepend styles (если нужно добавить ссылку на стили до базовой)
append styles
	link(rel="stylesheet" href=`${baseDir}assets/css/contacts.min.css`)
	link(rel="stylesheet" href=`${baseDir}assets/css/forms.min.css`)

block header
	include ../../pug/blocks/contacts/contactsHeader.pug

block content
	include ../../pug/blocks/forms/callBackForm.pug
	include ../../pug/blocks/forms/saccessPopup.pug

//- append scripts (если нужно добавить ссылку на скрипты после базовой)
append scripts
	script(src= baseDir + "sender.php?id=callback-form")